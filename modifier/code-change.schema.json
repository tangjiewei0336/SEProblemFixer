{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Java Code Changes",
  "description": "A structured way to define changes between two Java code versions",
  "type": "object",
  "properties": {
    "repository": {
      "type": "string",
      "description": "Repository name or path"
    },
    "base_commit": {
      "type": "string",
      "description": "Original commit hash"
    },
    "target_commit": {
      "type": "string",
      "description": "Target commit hash"
    },
    "operations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "file": {
            "type": "string",
            "description": "File path (e.g., src/main/java/com/example/MyClass.java)"
          },
          "action": {
            "type": "string",
            "enum": [
              "CREATE_FILE",
              "DELETE_FILE",
              "RENAME_FILE",
              "UPDATE_CODE"
            ],
            "description": "Action to perform on the file (e.g., 'CREATE_FILE')"
          },
          "content": {
            "type": "string",
            "description": "Required for CREATE_FILE (full content)"
          },
          "new_path": {
            "type": "string",
            "description": "Required for RENAME_FILE"
          },
          "changes": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "ADD_CLASS",
                    "REMOVE_CLASS",
                    "ADD_FIELD",
                    "REMOVE_FIELD",
                    "UPDATE_FIELD",
                    "ADD_METHOD",
                    "REMOVE_METHOD",
                    "UPDATE_METHOD",
                    "ADD_IMPORT",
                    "REMOVE_IMPORT"
                  ],
                    "description": "Type of change (e.g., 'ADD_FIELD')"
                },
                "class": {
                  "type": "string",
                  "description": "Class name(e.g., 'MyClass')"
                },
                "method": {
                  "type": "string",
                    "description": "Method name (e.g., 'myMethod')"
                },
                "params": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "description": "Method parameters (e.g., 'int id')"
                  },
                    "description": "Parameters for methods (e.g., ['int id'])"
                },
                "new_code": {
                  "type": "string",
                  "description": "New implementation (for updates/additions)"
                },
                "import": {
                  "type": "string",
                  "description": "Import statement (e.g., 'import java.util.List')"
                }
              },
              "required": ["type"]
            }
          }
        },
        "required": ["file", "action"]
      }
    }
  },
  "required": ["operations"]
}